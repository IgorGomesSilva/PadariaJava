	<persistence-unit name="br.com.padaria" transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
   		<jta-data-source>Padaria</jta-data-source>
   		
   		
		
		<class>br.com.padaria.entidade.ProdutoCompra</class>
		<class>br.com.padaria.entidade.Produto</class>
		<class>br.com.padaria.entidade.Cliente</class>
		<class>br.com.padaria.entidade.Compra</class>
		<class>br.com.padaria.entidade.Usuario</class>
		

	
		
		<properties>
			<property name="eclipselink.logging.level" value="FINE"/>
